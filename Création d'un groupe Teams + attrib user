# === Connexion √† Microsoft Teams ===
Connect-MicrosoftTeams

üõ†Ô∏è Cr√©er un Team

$group = New-MgGroup -DisplayName "NomDeLaTeam" `
  -MailEnabled $true `
  -MailNickname "nomdelateam" `
  -SecurityEnabled $false `
  -GroupTypes "Unified" `
  -Visibility "Private"

New-MgTeam -GroupId $group.Id -BodyParameter @{
    memberSettings = @{
        allowCreateUpdateChannels = $true
    }
    messagingSettings = @{
        allowUserEditMessages = $true
        allowUserDeleteMessages = $true
    }
    funSettings = @{
        allowGiphy = $true
        giphyContentRating = "moderate"
    }
}


$team = New-Team -DisplayName "Nom de l'√©quipe" -Description "Description de l'√©quipe" -Visibility Private

# Ajouter un propri√©taire

Add-TeamUser -GroupId $team.GroupId -User user1@domaine.com -Role Owner

# Ajouter un membre

Add-TeamUser -GroupId $team.GroupId -User user2@domaine.com -Role Member



